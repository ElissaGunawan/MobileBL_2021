<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/angka1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="30dp"
        android:layout_marginLeft="10dp"
        />
    <EditText
        android:id="@+id/angka1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/angka1"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toRightOf="@+id/textView"
        android:layout_marginLeft="20dp"

        />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/angka2"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <EditText
        android:id="@+id/angka2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/angka2"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/angka1"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        />
    <Button
        android:id="@+id/btnTambah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:text="@string/btnTambah"
        android:layout_marginTop="5dp"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/btnKurang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/angka2"
        android:text="@string/btnKurang"
        app:layout_constraintLeft_toRightOf="@+id/btnTambah"
        android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/btnKali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnTambah"
        android:text="@string/btnKali"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/btnBagi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnKurang"
        android:text="@string/btnBagi"
        app:layout_constraintLeft_toRightOf="@+id/btnKali"
        android:layout_marginLeft="28dp"/>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hasil"
        app:layout_constraintTop_toBottomOf="@+id/btnKali"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <EditText
        android:id="@+id/hasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/btnBagi"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:text=""
        />


</androidx.constraintlayout.widget.ConstraintLayout>